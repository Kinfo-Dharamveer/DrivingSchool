<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsActivity">


    <LinearLayout
        android:focusableInTouchMode="true"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">


        <com.drivingschool.android.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/school_profile"
            android:textSize="@dimen/_18sdp"
            android:textAppearance="@style/TextViewBold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/school_na"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/edSchoolName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textSize="@dimen/_10sdp"
                android:background="@drawable/round_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School Logo"
                android:textSize="@dimen/_13sdp"/>

           <ImageView
               android:id="@+id/imageLogo"
               android:layout_marginLeft="@dimen/_10sdp"
               android:layout_width="@dimen/_50sdp"
               android:layout_height="@dimen/_50sdp"
               android:src="@drawable/log"
               android:scaleType="fitXY"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Logo"
                android:textSize="@dimen/_13sdp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_white"
                    android:padding="3dp">


                    <Button
                        android:id="@+id/btnChooseFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose File"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_12sdp"/>

                    <com.drivingschool.android.customviews.CustomTextView
                        android:id="@+id/tvImageName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No file chosen"
                        android:textSize="@dimen/_10sdp"
                        />

                </LinearLayout>

                <com.drivingschool.android.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/red"
                    android:text="@string/image_must_be"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/edAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textSize="@dimen/_10sdp"
                android:background="@drawable/round_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textSize="@dimen/_13sdp"/>

            <Spinner
                android:id="@+id/spinCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp"
                android:dropDownVerticalOffset="35dp"
                android:background="@drawable/round_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/google_map_link_for_school"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/edGoogleMapLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:inputType="text"
                android:padding="3dp"
                android:textSize="@dimen/_10sdp"
                android:background="@drawable/round_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobile"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/edMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:inputType="number"
                android:textSize="@dimen/_10sdp"
                android:background="@drawable/round_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/edEmailSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp"
                android:inputType="textEmailAddress"
                android:background="@drawable/round_white"/>

        </LinearLayout>


        <com.drivingschool.android.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/social_media_panel"
            android:textSize="@dimen/_18sdp"
            android:textAppearance="@style/TextViewBold"
            />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/facebook"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/edFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp"
                android:inputType="textEmailAddress"
                android:background="@drawable/round_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Twitter"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/edTwitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp"
                android:inputType="textEmailAddress"
                android:background="@drawable/round_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google Plus"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/edGooglePlus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp"
                android:inputType="textEmailAddress"
                android:background="@drawable/round_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Linkedin"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/edLinkedIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp"
                android:inputType="textEmailAddress"
                android:background="@drawable/round_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Youtube"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/edYouTube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/_10sdp"
                android:background="@drawable/round_white"/>

        </LinearLayout>

        <com.drivingschool.android.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Panel"
            android:textSize="@dimen/_18sdp"
            android:textAppearance="@style/TextViewBold"
            />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_text"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/edAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="top|left"
                android:maxLines="4"
                android:textSize="@dimen/_10sdp"
                android:scrollbars="vertical"
                android:lines="3"
                android:minLines="2"
                android:inputType="textMultiLine"
                android:background="@drawable/round_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructors"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/edInstructors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:inputType="number"
                android:textSize="@dimen/_10sdp"
                android:background="@drawable/round_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.drivingschool.android.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicles"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/edVehicleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp"
                android:inputType="number"
                android:background="@drawable/round_white"/>

        </LinearLayout>


        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_white"
            android:backgroundTint="@color/blue"
            android:text="Save Changes"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:padding="5dp"/>

    </LinearLayout>

</ScrollView>