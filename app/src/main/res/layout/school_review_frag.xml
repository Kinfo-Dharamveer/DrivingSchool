<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_margin="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.drivingschool.android.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My School Plans:"
                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="@color/orangetheme"
                    android:textSize="@dimen/_16sdp"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="200dp"
                        android:layout_height="1dp"
                        android:background="@color/orangetheme"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/grey"/>


                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/plansRecycView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/school_plans_row">

                </android.support.v7.widget.RecyclerView>



            </LinearLayout>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_margin="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.drivingschool.android.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My School Description"
                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="@color/orangetheme"
                    android:textSize="@dimen/_16sdp"/>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="200dp"
                        android:layout_height="1dp"
                        android:background="@color/orangetheme"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/grey"/>


                </LinearLayout>

                <com.drivingschool.android.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/description"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:padding="5dp"
            android:layout_margin="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.drivingschool.android.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Write a Review"
                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="@color/orangetheme"
                    android:textSize="@dimen/_16sdp"/>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="200dp"
                        android:layout_height="1dp"
                        android:background="@color/orangetheme"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/grey"/>


                </LinearLayout>



                <com.drivingschool.android.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:text="Give Rating"/>

                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:id="@+id/ratBarSchRev"
                    style="@style/Widget.MaterialRatingBar.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:numStars="5"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="5"
                    android:padding="5dp"
                    android:hint="Write your Review"
                    android:layout_margin="5dp"
                    android:minLines="5"
                    android:gravity="top|left"
                    android:maxLines="10"
                    android:background="@drawable/round_white"
                    />


                <com.drivingschool.android.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Write atleast 160 words for review."
                    android:textSize="@dimen/_15sdp"
                    android:layout_margin="3dp"
                    android:textColor="@color/orangetheme"/>

                <com.drivingschool.android.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_white"
                    android:text="Submit Your Review"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:layout_gravity="right"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/orangetheme"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:padding="5dp"
            android:layout_margin="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.drivingschool.android.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My School Reviews"
                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="@color/orangetheme"
                    android:textSize="@dimen/_16sdp"/>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="200dp"
                        android:layout_height="1dp"
                        android:background="@color/orangetheme"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/grey"/>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/imageReview"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:scaleType="fitXY"
                        android:background="@drawable/car"/>

                    <LinearLayout
                        android:layout_toRightOf="@id/imageReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <com.drivingschool.android.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dharamveer"
                            android:textColor="@color/black"
                            android:textAppearance="@style/TextViewBold"
                            android:textSize="@dimen/_17sdp"/>

                        <me.zhanghai.android.materialratingbar.MaterialRatingBar
                            style="@style/Widget.MaterialRatingBar.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:numStars="3"
                            android:padding="4dp"
                            android:layout_height="wrap_content"
                            />

                        <com.drivingschool.android.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:text="lorem ipsum somarisa alpaca ch"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>