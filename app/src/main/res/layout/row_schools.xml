<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/schoolImage"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/car"/>


        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.drivingschool.android.customviews.CustomTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My School"
                android:textColor="@color/orangetheme"
                android:textSize="@dimen/_15sdp"/>

            <com.drivingschool.android.customviews.CustomTextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gustavo Fring Avenue"
                android:drawableLeft="@drawable/ic_location"
                android:gravity="center"
                android:textColor="@color/black"
                />

            <com.drivingschool.android.customviews.CustomTextView
                android:id="@+id/typeVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LMV,HMV"
                android:drawableLeft="@drawable/ic_circle"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="@color/black"
                />
            <com.drivingschool.android.customviews.CustomTextView
                android:id="@+id/tvInstr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Instructors"
                android:drawableLeft="@drawable/ic_circle"
                android:gravity="center"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                />
            <com.drivingschool.android.customviews.CustomTextView
                android:id="@+id/tvVehicleCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 Vehicles"
                android:layout_margin="2dp"
                android:drawableLeft="@drawable/ic_circle"
                android:gravity="center"
                android:textColor="@color/black"
                />


        </LinearLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.drivingschool.android.customviews.CustomTextView
                android:id="@+id/tvReviewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/round_white"
                android:backgroundTint="@color/green"
                android:padding="3dp"
                android:text="1 review"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />


            <com.drivingschool.android.customviews.CustomTextView
                android:id="@+id/tvReadmore"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/round_white"
                android:padding="3dp"
                android:text="Read more"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />


        </RelativeLayout>

    </LinearLayout>




</android.support.v7.widget.CardView>